<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutApp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tentang Aplikasi"
    android:layout_gravity="center"
    android:textSize="18dp"
    android:fontFamily="@font/inter_bold"
    android:textColor="@color/black"
    />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="324dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:lottie_rawRes="@raw/aboutus"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_height="215dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terima Kasih"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terima kasih kami ucapkan dari Tim Pengembang Aplikasi Mobile Titu Laundry Team Romusa yang telah menggunakan aplikasi ini untuk melakukan pemesanan laundry.  "
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hubungi Tim Pengembang"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/toGmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/niceBlue"
        android:layout_marginHorizontal="50dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp">
<TextView
    android:id="@+id/setEmaill"
    android:layout_width="match_parent"
    android:gravity="center"
    android:textSize="12dp"
    android:layout_height="match_parent"
    android:text="Gmail : romu2ateam@gmail.com"
    android:textColor="@color/white"
    />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Made With ❤ By Romusa"
        android:textColor="@color/black"
        android:gravity="bottom|center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        />
</LinearLayout>