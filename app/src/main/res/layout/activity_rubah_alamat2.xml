<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    tools:context=".Dashboard.Change_Address"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_marginTop="20dp"
       android:layout_marginHorizontal="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageButton
           android:id="@+id/kembali"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_btn_back"
           map:layout_constraintStart_toStartOf="parent"
           map:layout_constraintTop_toTopOf="parent"
           map:layout_constraintLeft_toRightOf="@+id/header"
           android:background="@drawable/ic_btn_back"
           />
       <TextView
           android:id="@+id/header"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Ubah Alamat"
           android:padding="2dp"
           android:fontFamily="@font/inter_bold"
           android:textSize="18dp"
           android:textColor="#333333"
           map:layout_constraintStart_toStartOf="parent"
           map:layout_constraintTop_toTopOf="parent"
           map:layout_constraintEnd_toEndOf="parent"
           />
   </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/HeaderAlamatSaatIni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:text="Alamat saat ini : "
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
    />
    <TextView
        android:id="@+id/alamatSekarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:src="@color/niceBlue"
        android:layout_height="300dp"/>
    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/cariAlamat"
            android:inputType="text"
            android:padding="15dp"
            android:textColorHighlight="@color/niceBlue"
            android:background="@drawable/edt_rounded"
            android:hint="Cari Alamat"
            android:textSize="14dp"
            android:layout_marginRight="10dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/cari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/niceBlue"
            android:textColor="@color/white"
            android:text="Cari"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_bold"
            android:padding="10dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/HeadAlamatBaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat baru"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        map:boxBackgroundColor="@android:color/transparent"
        android:background="@android:color/transparent">
        <EditText
            android:id="@+id/setAlamat"
            android:textSize="14dp"
            android:maxLines="5"
            android:inputType="textMultiLine"
            android:lineHeight="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/niceBlue"
        android:textColor="@color/white"
        android:text="Simpan"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="50dp"
        android:padding="20dp"
        />

</LinearLayout>
