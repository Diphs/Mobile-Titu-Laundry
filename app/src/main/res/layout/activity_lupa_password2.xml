<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="20dp"
    tools:context=".lupaPassword2">

    <TextView
        android:id="@+id/titleKonfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Atur Ulang Kata Sandi"
        android:layout_marginTop="20dp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="24dp"
        />
    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Masukkan kode verifikasi yang dikirim ke alamat email kamu untuk merubah kata sandi"
        android:layout_marginTop="12dp"
        android:textSize="15dp"
        android:textColor="#828282"
        />

    <com.chaos.view.PinView
        android:id="@+id/firstPinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        app:itemCount="5"
        app:itemWidth="58dp"
        app:itemHeight="58dp"
        android:focusableInTouchMode="true"
        android:textColor="#333333"
        android:textSize="20dp"
        android:fontFamily="@font/inter_medium"
        android:inputType="number"
        android:layout_marginTop="24dp"
        android:itemBackground="#F2F2F2"
        app:itemRadius="6dp"
        app:itemSpacing="20dp"
        app:lineColor="#F2F2F2"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Belum menerima kode? Kirim ulang"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="#828282"
        />

    <Button
        android:id="@+id/continueSelamat"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/inter_bold"
        android:text="Konfirmasi"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="32dp"
        />
</LinearLayout>