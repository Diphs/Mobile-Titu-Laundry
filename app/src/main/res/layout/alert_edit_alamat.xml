<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AlertKemren"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >
            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah Alamat"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/close"
                />
            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bdbdbd"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/closeButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lytEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@android:color/transparent"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line4"
                >
                <EditText
                    android:id="@+id/inputAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-15dp"
                    android:hint="Tulis Alamat"
                    android:layout_marginTop="25dp"
                    android:textSize="15dp"

                    />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/alertggl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Tidak tersedia, mohon tulis dengan rinci"
                android:textColor="#e33e31"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@+id/lytEdit"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/contoh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="cth : Perumnas Candirejo ,Desa Gejagan , \nKecamatan Loceret , Nganjuk"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@+id/alertggl"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/alamatLain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contoh"
                android:text="Alamat Lainnya"
                />
            <ImageButton
                android:id="@+id/showAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down"
                app:layout_constraintTop_toBottomOf="@+id/contoh"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/white"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:id="@+id/alertnull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/alamatLain"
                android:text="Daftar alamat lain kosong!"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/submitAlamat"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/alamatLain"
                app:layout_constraintStart_toStartOf="parent"
                />
            <Button
                android:id="@+id/submitAlamat"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Tetapkan"
                android:textSize="14dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/inter_bold"
                app:layout_constraintTop_toBottomOf="@+id/recycleAlamat"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>