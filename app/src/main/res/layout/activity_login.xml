<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_height="match_parent"
    tools:context=".Login">
    <TextView
        android:id="@+id/selamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Selamat datangðŸ‘‹"
        android:layout_marginTop="20dp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Kami senang melihatmu lagi! Masuk untuk mulai menggunakan layanan kami"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/selamat"
        android:textSize="15dp"
        android:textColor="#828282"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:hintEnabled="false"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:boxStrokeColor="#FFF"
        app:boxBackgroundColor="#FFF"
        >
        <EditText
            android:id="@+id/getEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edt_rounded"
            android:padding="20dp"
            android:drawablePadding="12dp"
            android:textSize="16dp"
            android:hint="Email"
            android:drawableStart="@drawable/pesan"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:boxStrokeColor="#FFF"
        app:boxBackgroundColor="#FFF"
        >
        <EditText
            android:id="@+id/getPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:background="@drawable/edt_rounded"
            android:padding="20dp"
            android:drawablePadding="12dp"
            android:hint="Kata Sandi"
            android:drawableStart="@drawable/lock"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/lupaPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lupa Sandi?"
        android:layout_marginTop="15dp"
        android:textAlignment="textEnd"
        android:textSize="15dp"
        android:textColor="@color/niceBlue"
        app:layout_constraintTop_toBottomOf="@id/inputPassword"
        />
<Button
    android:id="@+id/signIn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Masuk"
    android:padding="20dp"
    android:textAllCaps="false"
    android:fontFamily="@font/inter_bold"
    android:textSize="14dp"
    android:layout_marginTop="32dp"
    app:layout_constraintTop_toBottomOf="@id/lupaPassword"
    />
    <TextView
        android:id="@+id/takonAkun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belum punya akun? Daftar Akun"
        android:textSize="15dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        />
</androidx.constraintlayout.widget.ConstraintLayout>