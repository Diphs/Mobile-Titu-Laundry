<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_height="match_parent"
    tools:context=".Dashboard.Frg_Selesai">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="142dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="10dp"
            app:cardBackgroundColor="#e3f5ff"
            android:layout_height="79dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Total Berat Cucian"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/todbrt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="24dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="142dp"
            app:cardCornerRadius="15dp"
            android:layout_margin="5dp"
            android:layout_marginHorizontal="10dp"
            app:cardBackgroundColor="#f7f9fb"
            android:layout_height="79dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Total Pengeluaran"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/todKeluar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="24dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="10dp"

        android:layout_marginTop="20dp"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/tgl_mulai"
            android:layout_width="80dp"
            android:hint="tgl mulai"
            android:textSize="12dp"
            android:inputType="date"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/pilih_mulai"
            android:layout_width="40dp"
            android:background="@color/white"
            android:src="@drawable/cldr"
            android:layout_height="40dp"/>
        <EditText
            android:id="@+id/tgl_akhir"
            android:layout_width="80dp"
            android:hint="tgl akhir"
            android:textSize="12dp"
            android:inputType="date"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/pilih_akhir"
            android:layout_width="40dp"
            android:background="@color/white"
            android:layout_marginEnd="10dp"

            android:src="@drawable/cldr"
            android:layout_height="40dp"/>
        <ImageButton
            android:id="@+id/cariPesanan"
            android:layout_width="wrap_content"
            android:elevation="5dp"
            android:background="#f7f9fb"
            android:layout_marginEnd="15dp"
            android:src="@drawable/search"
            android:padding="5dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:background="#e3f5ff"
            android:elevation="5dp"
            android:src="@drawable/ic_baseline_refresh_24"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleSelesai"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:id="@+id/kosongHatiku"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/cart_empty"
                    android:layout_marginRight="10dp"
                    android:layout_height="30dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/pesn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daftar Pesanan Selesai Kosong!"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/pesn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="Jika Pesanan sudah selesai maka akan muncul dalam daftar"
                        />
                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTodPes"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="70dp"
                app:cardBackgroundColor="#e3f5ff"
                app:cardCornerRadius="15dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Total Pesanan"
                        />
                    <TextView
                        android:id="@+id/akehPesenan"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="32"
                        android:textSize="16dp"
                        android:fontFamily="@font/inter_bold"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>