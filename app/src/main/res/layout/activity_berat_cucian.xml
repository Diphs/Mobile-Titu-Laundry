<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp"
    tools:context=".atur_pesanan.BeratCucian">
    <ImageButton
        android:id="@+id/kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_btn_back"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/header"
        android:background="@drawable/ic_btn_back"
        />
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berat Cucian"
        android:padding="2dp"
        android:fontFamily="@font/inter_bold"
        android:textSize="18dp"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/textBerat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Atur Berat Pakaian"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />
    <LinearLayout
        android:id="@+id/plsmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBerat">
        <androidx.cardview.widget.CardView
            android:id="@+id/minBtn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="360dp">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/min"
               android:layout_gravity="center_vertical" />
        </androidx.cardview.widget.CardView>
        <EditText
            android:id="@+id/OrderCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:backgroundTint="@color/black"
            android:textColorHighlight="#318efd"
            android:text="666"
            android:inputType="number"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <androidx.cardview.widget.CardView
            android:id="@+id/plsBtn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="360dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/plus"
                android:layout_gravity="center_vertical" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/descLaundry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plsmin"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:text="Pastikan bahwa semua pakaian anda ditempatkan menjadi satu dalam wadah plastik agar memudahkan kurir saat penjemputan"
        android:gravity="center"
        />
    <View
        android:id="@+id/line3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        app:layout_constraintTop_toBottomOf="@+id/descLaundry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/estimasiBrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:text="Perkiraan berat pakaian"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/presiksiPakaian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estimasiBrt"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:text="Setiap 1 kg pakaian biasanya terdiri dari 5-6 baju orang dewasa. Sedangkan untuk tipe anak-anak, 1 kg dapat menampung hingga 10-12 pakaian"
        />
    <View
        android:id="@+id/line4"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        app:layout_constraintTop_toBottomOf="@+id/presiksiPakaian"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/estimasiHrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line4"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:text="Perkiraan Harga"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/textbrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total berat"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/estimasiHrg"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/totalBeratCucian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Kg"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/estimasiHrg"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/textHrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total harga"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textbrt"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/totalHargaCucian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 4.000 x 3 Kg"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textbrt"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15dp"
        />
    <View
        android:id="@+id/line5"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        app:layout_constraintTop_toBottomOf="@+id/totalHargaCucian"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/totalAkhir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line5"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:text="Total"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/hargaFix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 12.000"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/line5"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/buatPesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buat Pesanan"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:fontFamily="@font/inter_bold"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>