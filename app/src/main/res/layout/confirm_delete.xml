<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Peringatan!"
          android:fontFamily="@font/inter_bold"
          android:textColor="@color/black"
          android:textSize="20dp"
          android:layout_marginBottom="10dp"
          />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="120dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/dellete"
            android:layout_height="120dp"/>
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Yakin ingin menghapus alamat ?"
            android:textColor="@color/black"
            android:textSize="14dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/ok"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:textAllCaps="false"
                android:backgroundTint="#fce4e4"
                android:textColor="#ed6868"
                android:fontFamily="@font/inter_bold"
                android:text="Hapus"
                />
            <Button
                android:id="@+id/no"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:backgroundTint="#deebfc"
                android:textColor="@color/niceBlue"
                android:layout_marginHorizontal="10dp"
                android:textAllCaps="false"
                android:fontFamily="@font/inter_bold"
                android:text="Batal"
                />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>