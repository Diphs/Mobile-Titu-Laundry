<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="20dp"
    android:layout_height="match_parent"
    tools:context=".Dashboard.Detail_PesananUser">

    <ImageButton
        android:id="@+id/kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/header"
        android:background="@drawable/ic_btn_back"
        />
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Pesanan"
        android:padding="2dp"
        android:fontFamily="@font/inter_bold"
        android:textSize="18dp"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/rodd"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kembali">
        <ImageView
            android:id="@+id/gbr"
            android:layout_width="90dp"
            android:layout_height="70dp"

            android:scaleType="centerCrop"
            android:src="@drawable/cuci_kering"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/jenisJasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@+id/rodd"
        app:layout_constraintTop_toBottomOf="@+id/kembali"
        />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#219653"
        android:textSize="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/bunder_text"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/jenisJasa"
        app:layout_constraintLeft_toRightOf="@id/rodd"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/txTanggal"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal pemesanan"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/rodd"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/setTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/rodd"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/txEstimasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perkiraan tiba"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txTanggal"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/setEstimasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/setTanggal"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#bdbdbd"
        app:layout_constraintTop_toBottomOf="@+id/setEstimasi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <FrameLayout
        android:id="@+id/frmee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/alamatJemput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Penjemputan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                />

            <!--        awal-->
            <TextView
                android:id="@+id/NamaUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alamatJemput"
                android:layout_marginTop="15dp"
                android:textSize="14dp"

                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/alamatDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NamaUser"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textColor="@color/black"

                />
            <View
                android:id="@+id/line4"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#bdbdbd"
                app:layout_constraintTop_toBottomOf="@+id/alamatDetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/alamatPengiriman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Pengiriman"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line4"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/NamaUserKirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alamatPengiriman"
                android:layout_marginTop="15dp"
                android:textSize="14dp"

                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/alamatDetailKirim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NamaUserKirim"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textColor="@color/black"

                />
            <View
                android:id="@+id/linee1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="#bdbdbd"
                app:layout_constraintTop_toBottomOf="@+id/alamatDetailKirim"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


    <TextView
        android:id="@+id/headRingkas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ringkasan Biaya"
        app:layout_constraintTop_toBottomOf="@+id/frmee"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/textbrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Pesanan"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/headRingkas"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/totalBeratCucian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/headRingkas"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/textHrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PPN"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textbrt"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/totalHargaCucian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.132"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textbrt"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/setDisc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Potongan Harga"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textHrg"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/diskon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textHrg"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15dp"
        />
    <View
        android:id="@+id/linee4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/diskon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/totalAkhir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linee4"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:text="Total"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/hargaFix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/linee4"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>