<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginHorizontal="20dp"
    tools:context=".lupaPasswordSucces">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/image"
        android:layout_width="150dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/pww2"
        android:layout_height="150dp"
        android:src="@drawable/ic_success_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/selamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Kata Sandi berhasil dirubah!"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="@id/image"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:textAlignment="center"
        android:text="Sandimu berhasil dirubah, selanjutnya kamu dapat masuk menggunakan kata sandi barumu"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/selamat"
        android:textSize="15dp"
        android:textColor="#828282"
        />

    <Button
        android:id="@+id/continueSelamat2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fontFamily="@font/inter_bold"
        android:text="Lanjut"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="32dp"
        />

</LinearLayout>